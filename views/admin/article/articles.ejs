<%- include('../shares/header') %>

<link href="/administrator/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">

<link href="/administrator/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">



<body>

<div id="wrapper">

    <!-- Navigation -->
    <%- include('../shares/navbar') %>

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">文章列表</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        文章列表
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="table" width="100%"
                                           class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline"
                                           id="table" role="grid"
                                           aria-describedby="dataTables-example_info" style="width: 100%;">
                                        <thead>
                                        <tr role="row">
                                            <th class="" tabindex="0" aria-controls="dataTables-example"
                                                rowspan="1" colspan="1" aria-sort="ascending"
                                                aria-label="Rendering engine: activate to sort column descending"
                                                style="width: 152px;">ID
                                            </th>
                                            <th class="" tabindex="0" aria-controls="dataTables-example"
                                                rowspan="1" colspan="1" id="name"
                                                aria-label="Browser: activate to sort column ascending"
                                                style="width: 187px;">标题
                                            </th>
                                            <th class="" tabindex="0" aria-controls="dataTables-example"
                                                rowspan="1" colspan="1" id="name"
                                                aria-label="Browser: activate to sort column ascending"
                                                style="width: 187px;">分类
                                            </th>
                                            <th class="" tabindex="0" aria-controls="dataTables-example"
                                                rowspan="1" colspan="1"
                                                aria-label="CSS grade: activate to sort column ascending"
                                                style="width: 98px;">图片
                                            </th>
                                            <th class="" tabindex="0" aria-controls="dataTables-example"
                                                rowspan="1" colspan="1"
                                                aria-label="CSS grade: activate to sort column ascending"
                                                style="width: 98px;">添加时间
                                            </th>
                                            <!--<th class="" tabindex="0" aria-controls="dataTables-example"-->
                                                <!--rowspan="1" colspan="1"-->
                                                <!--aria-label="CSS grade: activate to sort column ascending"-->
                                                <!--style="width: 98px;">点击次数-->
                                            <!--</th>-->
                                            <th class="" tabindex="0" aria-controls="dataTables-example"
                                                rowspan="1" colspan="1"
                                                aria-label="CSS grade: activate to sort column ascending"
                                                style="width: 98px;">操作
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <% for(let i = 0; i < articles.length; i++) { %>
                                        <tr class="gradeA odd" role="row">
                                            <td class="sorting_1"><%= articles[i]._id %></td>
                                            <td class="name"><%= articles[i].title %></td>
                                            <td class="name"><%= articles[i].category %></td>
                                            <td class="name"><img width="50" src="<%= articles[i].pic %>" alt=""></td>
                                            <td class="name"><%= articles[i].addtime %></td>
                                            <!--<td class="name"><%= articles[i].times %></td>-->
                                            <td class="text-center">
                                                <a class="btn btn-xs btn-info"
                                                   href="/article/<%= articles[i]._id %>/edit">编辑</a>
                                                <a class="btn btn-xs btn-danger delete-article" data-id="<%= articles[i]._id %>"
                                                   href="javascript:;">删除</a>
                                            </td>
                                        </tr>
                                        <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
<script>


    // 点击删除后确定是否删除
    $('.delete-article').click(function() {
        var id = $(this).attr('data-id')
        if(confirm('确定要删除此分类吗？')) {
            location.href = '/article/' + id + '/delete'
        }
    })

    // 表格
    $(document).ready( function () {
        $('#table').DataTable({
            "language": {
                "url": "/administrator/language/Chinese.json"
            },
            "lengthMenu": [[10, 15, 20, -1], [10, 15, 20, "全部"]]
        });
    });
</script>
</body>

<%- include('../shares/footer') %>

<script src="/administrator/vendor/datatables/js/jquery.dataTables.min.js"></script>

<script src="/administrator/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>

<script src="/administrator/vendor/datatables-responsive/dataTables.responsive.js"></script>
